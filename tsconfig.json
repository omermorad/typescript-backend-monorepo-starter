{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "target": "es6",
    "sourceMap": true,
    "incremental": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2019",
      "es6"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
